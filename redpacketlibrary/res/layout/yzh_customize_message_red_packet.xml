<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/bubble"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:background="@drawable/yzh_money_chat_to_bg">

        <ImageView
            android:id="@+id/iv_money_icon"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/yzh_money_icon" />

        <TextView
            android:id="@+id/tv_money_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_money_icon"
            android:layout_toRightOf="@id/iv_money_icon"
            android:maxLength="10"
            android:singleLine="true"
            android:text="恭喜发财 大吉大利!"
            android:textColor="@color/money_white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money_greeting"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/iv_money_icon"
            android:text="查看红包"
            android:textColor="@color/money_white"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true">


            <TextView
                android:id="@+id/tv_sponsor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="云账户红包"
                android:textColor="@color/text_light_grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_packet_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/top_red_color" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>